{% extends 'base.html.twig' %}

{% block title %}Tous les Auteurs!{% endblock %}

{% block content %}
    {% for auteur in auteurs %}
        <div class="d-flex justify-content-center">
            <div class="card mt-2" style="width: 25rem;">
                <div class="card-body">
                    <h3 class="card-title text-center">{{ auteur.firstname }} {{ auteur.lastname }}</h3>
                    <div class="btn group mr-2 w-100">
                        <a class="btn btn-dark" href="{{ path('showOneAuteur', {'idAuteur': auteur.idAuteur}) }}"
                           role="button">Lire l'auteur</a>
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
{% endblock %}
