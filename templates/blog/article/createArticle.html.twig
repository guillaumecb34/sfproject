{% extends 'base.html.twig' %}

{% block title %}Create Article!{% endblock %}

{% block content %}
{% form_theme articleForm 'bootstrap_4_layout.html.twig' %}
    {{ form_start(articleForm) }}
<div class="d-flex justify-content-center mt-5">
    <div class="card" style="width: 25rem" ;>
        <div>
            {{ form_errors(articleForm) }}
        </div>
        <div class="card-body">
            <h5 class="card-title text-center">Cr√©e un Article</h5>
            <div class="col card-subtitle mb-2 text-muted">
                {{ form_row(articleForm.title) }}
            </div>
            <div class="col card-subtitle mb-2 text-muted">
                {{ form_row(articleForm.content) }}
            </div>
            <div class="col card-subtitle mb-2 text-muted">
                {{ form_row(articleForm.auteur) }}
            </div>
            <div class="col text-center">
                {{ form_row(articleForm.Valider) }}
            </div>
        </div>
    </div>
    {{ form_end(articleForm) }}
    {% endblock %}
